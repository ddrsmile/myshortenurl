#!/bin/bash

NAME="shorten_url"
WEBAPPDIR=/srv/webapps/shorten_url/deploy/dev/bin
DJANGODIR=/srv/webapps/shorten_url/shorten_url
DEPLOYDIR=/srv/webapps/shorten_url/deploy
SOCKFILE=/srv/webapps/shorten_url/deploy/run/gunicorn_shorten_url.sock
USER=webapps
GROUP=webapps
NUM_WORKERS=3
DJANGO_SETTINGS_MODULE=project.settings.prod
DJANGO_WSGI_MODULE=project.wsgi

echo "String $NAME as `whoami`"

cd $DEPLOYDIR
source env/bin/activate
export DJANGO_SETTINGS_MODULE=$DJANGO_SETTINGS_MODULE
export PYTHONPATH=$DJANGODIR:$PYTHONPATH

RUNDIR=$(dirname $SOCKFILE)
test -d $RUNDIR || mkdir -p $RUNDIR

exec ${DEPLOYDIR}/env/bin/gunicorn ${DJANGO_WSGI_MODULE}:application \
    --name $NAME \
    --workers $NUM_WORKERS \
    --user=$USER  --group=$GROUP \
    --bind=unix:$SOCKFILE \
    --log-level=debug \
    --log-file=-
